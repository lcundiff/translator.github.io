/* General Styles */
html{
   background-size: cover;
   height:100%;
   background-color: #000000;
}
* {
   box-sizing:border-box;
   -webkit-box-sizing:border-box;
   -moz-box-sizing:border-box;
   -webkit-font-smoothing:antialiased;
   -moz-font-smoothing:antialiased;
   -o-font-smoothing:antialiased;
   font-smoothing:antialiased;
   text-rendering:optimizeLegibility;
}

#contact-form {
   background-color:#0350FF;
   padding: 10px 20px 30px 20px;
   max-width:100%;
   /*float: left;
   left: 50%;
   position: relative;*/
   /*margin-top:30px;
   margin-left: -450px;*/
   margin-left: 25%;
   margin-right: 25%;
   border-radius:7px;
   -webkit-border-radius:7px;
   -moz-border-radius:7px;
}
#contact-form input,   
#contact-form select,   
#contact-form textarea,   
#contact-form label { 
   font-size: 15px;  
   margin-bottom: 2px;
   font-family: Arial, san-serif;
} 
#contact-form input,   
#contact-form select,   
#contact-form textarea { 
   width:100%;
   background: #FFFFFF; /* message background */
   border: 0; 
   -webkit-border-radius: 4px;  
   border-radius: 4px;
   margin-bottom: 25px;  
   padding: 5px;  
}  
#contact-form input:focus,   
#contact-form select:focus,   
#contact-form textarea:focus {  
   background-color: #FFFFFF; /* first user name */
}  
#contact-form textarea {
   width:100%;
   height: 150px;
}
#contact-form button[type="submit"] {
   cursor:pointer;
   width:100%;
   border:none;
   background:#FFFFFF;
   background-image:linear-gradient(bottom, #f9ff89 0%, #f7ed67 52%);
   background-image:-moz-linear-gradient(bottom, #f9ff89 0%, #f7ed67 52%);
   background-image:-webkit-linear-gradient(bottom, #f9ff89 0%, #f7ed67 52%);
   color:#35558c;
   font-weight:bold; 
   margin:0 0 5px;
   padding:10px;
   border-radius:5px;
}
#contact-form button[type="submit"]:hover {
   background-image:linear-gradient(bottom, #5996ff 0%, #f7ed67 20%);
   background-image:-moz-linear-gradient(bottom, #5996ff 0%, #f7ed67 20%);
   background-image:-webkit-linear-gradient(bottom, #35558c	 0%, #f7ed67 20%);
   -webkit-transition:background 0.3s ease-in-out;
   -moz-transition:background 0.3s ease-in-out;
   transition:background-color 0.3s ease-in-out;
}
